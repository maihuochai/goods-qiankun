*
  padding 0
  margin 0
body,html
  width 100%
  height 100%
  overflow hidden

//全局设置滚动条
::-webkit-scrollbar
  width 5px
  background rgba(0,0,0,0)
  border-radius 5px
::-webkit-scrollbar-button
  display none
::-webkit-scrollbar-thumb
  width 5px
  background primaryColor
  &:horizontal
    height 5px !important
  background #409EFF
  border-radius 5px
